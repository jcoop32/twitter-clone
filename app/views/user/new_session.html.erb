<div class="container d-flex flex-column justify-content-center align-items-center border rounded mt-5 p-2">
    <div>
        <h1>Login</h1>
    </div>
    <div class="p-3">
    <%= form_with(scope: :user, url: login_path, local: true) do |f|%>
        <p>
            <%=f.label :username%>
            <br>
            <%=f.text_field :username%>
        </p>
        <p>
            <%=f.label :password%>
            <br>
            <%=f.password_field :password%>
        </p>
        <button type="submit" class="btn btn-primary">Log In</button>

    <%end%>
    <br>
    <span class="text-white text-decoration-none">New user?</span>
    <a href="/signup">Sign up.</a>
    </div>
    <div class="text-danger">
        <%flash.each do |name, msg|%>
            <%=msg%>
        <%end%>
    </div>
</div>
