<div class="mb-3 mt-3 tweet-width">
    <%=form_with(model: @tweet, local: true) do |f|%>
        <%=f.text_area :message, class: "form-control div-h", placeholder: "What's on your mind?"%>
        <div class="position-relative">
            <button type="submit" class="btn btn-primary position-absolute bottom-0 end-0 m-3">Tweet</button>
        </div>
        <div class="position-relative">
            <button class="btn text-white position-absolute bottom-0 start-0 m-3" id="img-btn"><i class="fa-regular fa-image"></i></button>
        </div>
        <%=f.text_field :image, class: "form-control mt-2 hide-box", id: "image-container", placeholder: "Image Link"%>
    <%end%>
</div>

<script>
    $(() => {
        $img = $('#image-container');
        $imgButton = $("#img-btn");
        $imgButton.on('click', function(){
            $img.toggleClass('hide-box')
        })
    });
</script>
