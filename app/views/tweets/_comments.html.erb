<% if @comments.count < 1 %>
    <p>No comments.</p>
<%else%>
    <%@comments.each do |comment|%>
        <div class="container border p-2 comment-width" >
            <div class="d-inline-flex rounded p-2" onclick="location.href='/user/<%=comment.user_id%>';">
                <p style="margin-right: 5px;"><%=comment.user.name%></p>
                <p style="color: gray; cursor: pointer;">@<%=comment.user.username%></p>
            </div>
                <div class="container" >
                    <h6 class="" style="font-family: Tahoma, sans-serif;"><%=comment.message%></h6>
                </div>
                <div class="container d-flex justify-content-between align-items-center">
                    <div>
                        <small style="color: gray;"><%=time_ago_in_words(comment.created_at)%></small>
                    </div>
                </div>
        </div>
    <%end%>
<%end%>
