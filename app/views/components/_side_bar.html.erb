<div class="d-flex flex-column flex-shrink-0 p-3 border rounded side-bar mt-4">
    <a href="/" class="text-decoration-none text-white">
        <i class="fa-brands fa-twitter fa-2xl"></i>
        &nbsp;Tweeter
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li>
        <a href="/" class="text-decoration text-white"><button class="btn btn-primary">Home</button></a>
      </li>
      <li>
        <p class="mt-3">@<strong><%= @user.username%></strong></p>
      </li>
      <li>
        <p>Followers: <%= @followers%></p>
      </li>
      <li>
        <p>Following: <%= @following%></p>
      </li>
    </ul>
    <hr>
    <div class="dropdown">
      <p class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" style="cursor: pointer;" data-bs-toggle="dropdown" aria-expanded="false">
        <strong><%= @user.name%></strong>
      </p>
      <ul class="dropdown-menu text-small shadow">
        <li><a class="dropdown-item" href="/user/<%=@user.id%>">Profile</a></li>
        <li><a class="dropdown-item" href="/user/edit/<%=@user.id%>">Settings</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><%= link_to 'Logout', login_path, data: { turbo_method: :delete }, data: {confirm: "Are you sure?"}, class:  " dropdown-item" %></li>
      </ul>
    </div>
</div>
